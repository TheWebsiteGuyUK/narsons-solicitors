---
import directus from '@lib/directus'
import { readSingleton } from '@directus/sdk'
import ContactForm from '@components/ContactForm';
const companyDetails = await directus.request(readSingleton('company_details'))


---
<!-- Contact Us -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-screen-2xl mx-auto">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-primary-800 sm:text-4xl">
          Contact us
        </h1>
        <p class="mt-1 text-primary-600">
          We'd love to talk about how we can help you.
        </p>
      </div>
  
      <div class="mt-12 grid items-center lg:grid-cols-2 gap-6 lg:gap-16">
        
        <ContactForm client:load />
  
        <div class="divide-y divide-primary-200 dark:divide-neutral-800" id="contact" transition-slide>
          <!-- Icon Block -->
          <div class="flex gap-x-7 py-6" >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pinned"><path d="M18 8c0 3.613-3.869 7.429-5.393 8.795a1 1 0 0 1-1.214 0C9.87 15.429 6 11.613 6 8a6 6 0 0 1 12 0"/><circle cx="12" cy="8" r="2"/><path d="M8.714 14h-3.71a1 1 0 0 0-.948.683l-2.004 6A1 1 0 0 0 3 22h18a1 1 0 0 0 .948-1.316l-2-6a1 1 0 0 0-.949-.684h-3.712"/></svg>
            <div class="grow" >
              <h3 class="font-semibold text-primary-800">Address</h3>
              <p class="mt-1 text-sm text-primary-500">
                {companyDetails.address_line_1} {companyDetails.address_line_2} <br>
                {companyDetails.town} 
                {companyDetails.city} {companyDetails.postcode}
              </p>
              <a class="mt-2 inline-flex items-center gap-x-2 text-sm font-medium text-primary-400 hover:text-primary-500 focus:outline-none focus:text-primary-800 " href="https://www.google.com/maps/dir//77+The+Grove,+London+W5+5LL/@51.5110581,-0.3837597,12z/data=!4m8!4m7!1m0!1m5!1m1!1s0x48760d8007725003:0x199d0513fbbdc27f!2m2!1d-0.3013595!2d51.511087?entry=ttu" target="_blank">
                Get directions
                <svg class="shrink-0 size-2.5 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M0.975821 6.92249C0.43689 6.92249 -3.50468e-07 7.34222 -3.27835e-07 7.85999C-3.05203e-07 8.37775 0.43689 8.79749 0.975821 8.79749L12.7694 8.79748L7.60447 13.7596C7.22339 14.1257 7.22339 14.7193 7.60447 15.0854C7.98555 15.4515 8.60341 15.4515 8.98449 15.0854L15.6427 8.68862C16.1191 8.23098 16.1191 7.48899 15.6427 7.03134L8.98449 0.634573C8.60341 0.268455 7.98555 0.268456 7.60447 0.634573C7.22339 1.00069 7.22339 1.59428 7.60447 1.9604L12.7694 6.92248L0.975821 6.92249Z" fill="currentColor"/>
                </svg>
              </a>
            </div>
          </div>
          <!-- End Icon Block -->
  
          <!-- Icon Block -->
          <div class="flex gap-x-7 py-6" >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <div class="grow">
              <h3 class="font-semibold text-primary-800">Phone</h3>
              <p class="mt-1 text-sm text-primary-500">
                Call us on 
                <a href={`tel:${companyDetails.phone_number}`}>
                  <strong>{companyDetails.phone_number}</strong>
                </a>
              </p>
            </div>
          </div>
          <!-- End Icon Block -->
  
          <!-- Icon Block -->
          <div class=" flex gap-x-7 py-6" >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-alarm-clock"><circle cx="12" cy="13" r="8"/><path d="M12 9v4l2 2"/><path d="M5 3 2 6"/><path d="m22 6-3-3"/><path d="M6.38 18.7 4 21"/><path d="M17.64 18.67 20 21"/></svg>
            <div class="grow">
              <h3 class="font-semibold text-primary-800">Office Hours</h3>
              <p set:html={companyDetails.office_hours} class="mt-1 text-sm text-primary-500" />
             
            </div>
          </div>
          <!-- End Icon Block -->
  
          <!-- Icon Block -->
          <div class=" flex gap-x-7 py-6" >
            <svg class="shrink-0 size-6 mt-1.5 text-primary-800" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"/><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"/></svg>
            <div class="grow">
              <h3 class="font-semibold text-primary-800">Contact us by email</h3>
              <p class="mt-1 text-sm text-primary-500">If you wish to write us an email instead please use</p>
              <a class="mt-2 inline-flex items-center gap-x-2 text-sm font-medium text-primary-600 hover:text-primary-800 focus:outline-none focus:text-primary-800" href={`mailto:${companyDetails.email_address}`}>
                {companyDetails.email_address}
              </a>
            </div>
          </div>
          <!-- End Icon Block -->
        </div>
      </div>
    </div>
  </div>
  <!-- End Contact Us -->